rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Chat attachments - only authenticated users can upload
    match /chat-attachments/{conversationId}/{allPaths=**} {
      // Allow authenticated users to read and write
      allow read: if request.auth != null;
      allow write: if request.auth != null
        && request.resource.size < 16 * 1024 * 1024 // Max 16MB
        && request.resource.contentType.matches('image/.*|application/pdf|video/mp4');
    }
    
    // Default deny all other paths
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
